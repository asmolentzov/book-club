<header>
  <h1>All Books</h1>
</header>
<nav>
  <p>Navigation</p>
</nav>
<div class="statistics">
  <h2>Statistics</h2>
</div>
<div class="books">
  <% @books.each do |book| %>
    <div class="book-section" id="book-<%= book.id %>">
      <h2><%= link_to book.title, book_path(book), class: "link-text" %></h2>
        <% book.authors.each do |author| %>
          <h3><%= link_to author.name, author_path(author), class: "link-text" %></h3>
        <% end %>
      <p>Pages: <%= book.pages %></p>
      <p>Published in: <%= book.publishing_year %></p>
    </div>
  <% end %>
</div>

<footer>
  <%= link_to "Add New Book", new_book_path %>
</footer>
